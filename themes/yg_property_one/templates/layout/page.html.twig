{% set url = url('<current>') %}
{% if 'user' in url|render|render %}  
    <header id="home" style="background-image: url({{banner_image}});">
        <div class="container h-100">
            <div class="row h-100">               
                <div class="col-md-8 mx-auto text-center slider-content wow slideInUp">                   
                    <h1 class="">{{page['#title']}}</h1>
                </div>
            </div>
        </div>
    </header>
{% endif %}

{{page.content}}

<footer>
